{
  "extension": [
    ".ts",
    ".tsx"
  ],
  "reporter": [
    "html",
    "text-summary"
  ],
  "exclude": [
    "**/*.d.ts",
    "coverage/**",
    "packages/*/test/**",
    "spec/**",
    "spec{,-*}.ts",
    "**/*{.,-}{test,spec}.ts",
    "**/__tests__/**",
    "**/node_modules/**"
  ],
  "all": true
}